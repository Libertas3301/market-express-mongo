<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#bs-Wexample-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Brand</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/shopping-cart/">
                            <i class="fa fa-shopping-cart" aria-hidden="true"></i> Shopping Cart
                            <% if(!session.cart){ %>
                            <span class="badge">0</span>
                            <% } else { %>
                            <span class="badge"><%= session.cart.totalQuantity %></span>
                            <% } %>
                        </a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                            aria-expanded="false"><i class="fa fa-user" aria-hidden="true"></i> User Management <span
                                class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">User Account</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <form action="/filterRequest" method="POST">
        <label>costea geniu<input type="radio" name="radioOption" value="radioOption1"></label>
        <label>costea daun</label><input type="radio" name="radioOption" value="radioOption2"></label>
        <input type="submit" value="apasa">
    </form>
    <div class="container">
        <div class="row">
            <% for (var i = 0; i < products.length; i++) { %>
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="/uploads/<%= products[i].imagePath %>" style="width: 300px; height: 200px;">
                    <div class="caption">
                        <h3><%= products[i].title %></h3>
                        <p><%= products[i].description %></p>
                        <p>$<%= products[i].price %></p>
                    </div>
                    <div class="clearfix">
                        <a class="btn btn-success pull-right" role="button"
                            href="/product-review?id=<%= products[i]._id %>">Add to shopping cart</a>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <% if (pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/products/1">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/products/<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/products/<%= pages %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </div>
</body>


</html>